# Debian packaging
export DEBFULLNAME=Alexander\ Alemayhu
export DEBEMAIL=alexander@bitraf.no

# Locale
export LANGUAGE=en_US.UTF-8
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8

# Git
alias gitlog='git log -10 --graph --date-order -C -M --pretty=format:"%C(yellow)%h%C(reset) - %C(bold green)%ad%C(reset) - %C(dim yellow)%an%C(reset) %C(bold red)>%C(reset) %C(white)%s%C(reset) %C(bold red)%d%C(reset) " --abbrev-commit --date=short'
alias gic='git clone'
alias gip='git push'

function ga () {
  git push all --all
  git push all --tags
}

# golang
export GOPATH="$HOME"/opt/og
export GOROOT="$HOME"/opt/go

for i in "$HOME"/opt/*/bin
do
PATH="$PATH:$i"
done

# Stuff

ulimit -c unlimited
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

#source ~/src/atsign/atsign.sh
alias ii='sudo apt-get install'
alias batch_resize_jpg='for i in $( ls *.jpg); do convert -resize 50% $i re_$i; done'
alias cs='ssh alemayhu.com'
alias apt-all='sudo apt-get update && sudo apt-get upgrade && sudo apt-get autoclean'
alias latest-log='tail -f $( ls -1tr `find . -name "*.log"` | tail -1 )'
alias ccdate='date +"%A, %d. %B %Y"'

source $HOME/.git-completion.bash

function adb-screenshot()
{
echo $1
exit
adb shell screencap -p /sdcard/$1
adb pull /sdcard/$1
adb shell rm /sdcard/$1
}
