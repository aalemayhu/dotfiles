[alias]
	      ci = commit
	      st = status
        br = branch
        ch = checkout
        clf = clean -fd
        l = log --oneline
        p = pull
        ss = status -s
        forget = rm --cached
        unstage = reset HEAD --
        ll = !git --no-pager log -1 --pretty='tformat:%h (%s, %ad)' --date=short

[color]
        branch = auto
        diff = auto
        status = auto

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red
        new = cyan

[color "status"]
        added = yellow
        changed = green
        untracked = cyan
[push]
	      default = matching
[diff]
        tool = icdiff
        renames = true
        renameLimit = 2000

[difftool "icdiff"]
        cmd = icdiff $LOCAL $REMOTE
