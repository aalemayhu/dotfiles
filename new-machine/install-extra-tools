#!/bin/bash

HOMEDIR=/home/ccscanf

# Window manager
if [ ! -d "$HOMEDIR/src/hest" ]; then
  cd $HOMEDIR/src
  git clone https://github.com/scanf/hest.git
  cd hest/
  autoreconf -i
  ./configure
  make
  make install
fi

# Screensaver
if [ ! -d "$HOMEDIR/src/cantera-lock" ]; then
  cd $HOMEDIR/src
  git clone https://github.com/scanf/cantera-lock.git 
  cd cantera-lock/ 
  autoreconf -i 
  ./configure 
  make 
  make install 
fi

# Terminal
if [ ! -d "$HOMEDIR/src/cantera-term" ]; then
  cd $HOMEDIR/src
  git clone https://github.com/mortehu/cantera-term 
  cd cantera-term/ 
  autoreconf -i 
  ./configure 
  make 
  make install
fi

# Video downloader
if [ ! -d "$HOMEDIR/src/cc-y-download" ]; then
  cd $HOMEDIR/src
  git clone https://github.com/scanf/cc-y-download
fi

# Installation tool
if [ ! -d "$HOMEDIR/src/atsign" ]; then
  cd $HOMEDIR/src
  git clone https://github.com/mastensg/atsign/
  echo "source ~/src/atsign/atsign.sh" >> ~/.bashrc
fi
